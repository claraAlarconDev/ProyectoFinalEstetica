@model IEnumerable<Contacto>

<h1>Contactos pendientes</h1>
<hr />

<form asp-action="Index" method="get">
	<div class="row">
		<div class="col-md-4">
			<form asp-action="Index">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label class="control-label">Ingrese la contraseña:</label>
					<input class="form-control" type="text" id="password" name="password" />
					<span class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Buscar" class="btn btn-primary mt-3" />
				</div>
			</form>
		</div>
	</div>

</form>
@if(Model.FirstOrDefault() != null){
	<table class="table">
		<thead>
			<tr>
				<th>
					<label>Nombre</label>
				</th>
				<th>
					<label>Email</label>
				</th>
				<th>
					<label>Asunto</label>
				</th>
				<th>
					<label>Mensaje</label>
				</th>
				<th></th>
			</tr>
		</thead>
	@foreach(var contacto in Model){
		<tr>
			
			<td>
				<label>@contacto.Nombre</label>
			</td>
			<td>
				<label>@contacto.Email</label>
			</td>
			<td>
				<label>@contacto.Asunto</label>
			</td>
			<td>
				<label>@contacto.Mensaje</label>
			</td>
			<td>
					<a asp-action="Delete" asp-route-id="@contacto.ContactID" class="btn btn-danger">Borrar</a>
			</td>
			
		</tr>
	}
	</table>
}