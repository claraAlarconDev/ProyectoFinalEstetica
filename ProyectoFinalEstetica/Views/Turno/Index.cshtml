@model IEnumerable<Turno>

<h1>Mis turnos</h1>
<hr />

<form asp-action="Index" method="get" >
	<div class="row">
		<div class="col-md-4">
			<form asp-action="Index">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group">
					<label class="control-label">Ingrese numero de telefono:</label>
					<input class="form-control" type="text" id="phone" name="phone" />
					<span class="text-danger"></span>
				</div>

				<div class="form-group">
					<input type="submit" value="Buscar" class="btn btn-primary mt-3" />
				</div>
			</form>
		</div>
	</div>
	
</form>

@if(Model.FirstOrDefault() != null ){
<table class="table">
	<thead>
		<tr>
			<th>
				<label>FECHA</label>
			</th>
			<th>
				<label>HORARIO</label>
			</th>
			<th>
				<label>NOMBRE</label>
			</th>
			<th>
				<label>TELEFONO</label>
			</th>
			<th>
				<label>SERVICIO</label>
			</th>
			<th>
				<label>ESPECIALIDAD</label>
			</th>	
		</tr>
	</thead>

	@foreach(var item in Model){
		<tr>
			<td>
				<label>@item.Fecha.ToShortDateString()</label>
			</td>
		
			<td>
				<label>@item.Horario</label>
			</td>
		
			<td>
				<label>@item.Nombre</label>
			</td>
			
			<td>
				<label>@item.Telefono</label>
			</td>

			<td>
				<label>@item.servicio.tipo</label>
			</td>

			<td>
				<label>@item.Especialidad</label>
			</td>
		</tr> 
	}
</table>
}


